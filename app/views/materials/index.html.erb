<div class="container">
        <div class="table-card mt-50">
            <div class="display-flex">
                <h1>Materials</h1>
                <%= link_to "Add a new material", new_material_path, class: "button self-center ml-20" %>
            </div>

        <table class="shadow">
            <tr>
                <th>Name</th>
                <th>Find Crafts</th>
            </tr>
        <% @materials.each do |m| %>
            <tr>
                <td class="stash-row row">
                    <%= m.name %>
                </td>
                <td class="row">
                    <%= link_to "Show crafts", material_crafts_path(m.id), class: "button-gray display-inline-block" %>
                </td>
            </tr>
        <% end %>
    </table>
    </div>
</div>

